# ===========================================
# Find My Website - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# --- Database (Required) ---
# Neon Postgres (Vercel) or local PostgreSQL
DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# --- Redis (Required) ---
# Upstash Redis for rate limiting and caching
KV_REST_API_URL="https://your-redis.upstash.io"
KV_REST_API_TOKEN="your-upstash-token"
REDIS_URL="rediss://default:your-token@your-redis.upstash.io:6379"

# --- Authentication (Required for auth features) ---
NEXTAUTH_SECRET="generate-with: openssl rand -base64 32"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional - for Google sign-in)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth (optional - for GitHub sign-in)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# --- External APIs (Optional - enhances results) ---
# Wayback Machine (default works without key)
WAYBACK_API_URL="https://web.archive.org"

# WhoisXML API - improves WHOIS on serverless (1000 free req/month)
# Get key at: https://whoisxmlapi.com
WHOISXML_API_KEY=""

# SecurityTrails - enhanced security data
# Get key at: https://securitytrails.com
SECURITYTRAILS_API_KEY=""

# --- Sentry Error Monitoring ---
# Get your DSN from: https://sentry.io -> Project Settings -> Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=""
# Auth token for uploading source maps (create at https://sentry.io/settings/auth-tokens/)
SENTRY_AUTH_TOKEN=""
# Sentry organization and project slugs
SENTRY_ORG=""
SENTRY_PROJECT=""

# --- Application ---
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
